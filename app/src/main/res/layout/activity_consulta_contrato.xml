<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintConsulContrato"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".ActivityConsultaContrato">

    <Button
        android:id="@+id/buttonVoltarConsulContrato"
        android:layout_width="96dp"
        android:layout_height="57dp"
        android:background="@drawable/icone_voltar"
        android:padding="5dp"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/buttonNovoContrato"
        android:layout_width="136dp"
        android:layout_height="53dp"
        android:layout_weight="1"
        android:background="@drawable/button_beauty_full"
        android:text="Novo Contrato ++"
        tools:layout_editor_absoluteX="271dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageViewLogoConsulContrato"
        android:layout_width="101dp"
        android:layout_height="72dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/ic_launcher"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="16dp" />

    <ListView
        android:id="@+id/listViewContrato"
        android:layout_width="402dp"
        android:layout_height="497dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonVoltarConsulContrato">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>